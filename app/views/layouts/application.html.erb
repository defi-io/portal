  </head>
  <body>
	<% if controller_name == 'home' %>
		<div class='w-full h-screen mx-auto bg-gradient-to-l from-indigo-200'>
	<% else %>
		<div class='w-full h-full mx-auto bg-gradient-to-l from-indigo-200'>
	<% end %>
		<%= render partial: 'shared/navbar' %>
		<section class='flex'>
	    	<main class="mx-auto mt-4 px-5 flex">
	    		<%= yield %>
	   	 	</main>
		</section>
		<%= render partial: 'shared/footer' %>
	</div>
  </body>
</html>
