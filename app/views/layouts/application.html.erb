    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "defi", "data-turbo-track": "reload" %>
	<script src='https://terminal.jup.ag/main-v2.js'></script>
